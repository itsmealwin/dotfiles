" Set the font for MVIM
set guifont=Fantasque\ Sans\ Mono:h14

" Always start in full screen mode
set fu

" Remove all scrollbars
set guioptions-=m
set guioptions-=T
set guioptions-=r
set guioptions-=R
set guioptions-=l
set guioptions-=L
set guioptions-=b

" Set the titles
set title
set title titlestring=
